@page
<!-- This is the Razor Page for the "Contact" page of "The Books" website. -->
<!-- Set the model for this Razor Page to be the ContactModel. -->
@model TheBooks.Pages.ContactModel
@{
    // Set the page title dynamically using ViewData["Title"].
    ViewData["Title"] = "Contact";
}

<!-- Display the page title in an h1 heading. -->
<h1>@ViewData["Title"]</h1>

<!-- Link to the contact.css file for custom styles. -->
<link rel="stylesheet" href="/css/contact.css">

<!-- The main content section of the page. -->
<div class="contact-details">
    <!-- Display a heading for the contact information. -->
    <h2>Contact Information</h2>

    <!-- Display the contact details using paragraphs. -->
    <p>Email: example@example.com</p>
    <p>Phone: +1 (555) 123-4567</p>
    <p>Address: 123 Main Street, City, Country</p>
</div>